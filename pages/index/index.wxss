/**index.wxss**/
.hander{
     position: fixed;
     left: 0;
     top: 0;
}
.hander,.hander .fenlei{
     display: block;
     width: 100%;
}

    
.zhanwei{
     height: 50px;
     width: 100%;
}
.imge_banal,.tab_list{
     width:100%;
     display: flex; 
     flex-wrap:nowrap;
     justify-content: center; 
}
.banal_box{
     width: 90%;
     display: block;
     box-shadow: 0px 0px 3px #2eb3a4;
     border-radius: 5px;
     /* background-color: red; */
}
.tab_list,.tab_list2{
     justify-content: space-between;
     width: 90%;
     margin: 0 auto;
     padding-top: 16px; 
}
.tab_list2{
     display: flex;
     width: 85%;
     padding-top: 10px;
     margin-bottom: 24px;
}
.tab_list2 view:nth-child(odd){
      border-top: 1px solid #eb6438;
      width: 30%;
      visibility: hidden;
}
.tab_list2 view:nth-child(even){
      border-top: 1px solid #2eb3a4;
      width: 30%;
      visibility: hidden;
}
.setwidth{
      width: 100%;
      /* background-color: rebeccapurple; */
}
.imgtxt_list{
      width: 90%;
      margin: 0 auto;
      display: flex;
      padding-top: 10px;
      border-bottom: 1px solid #2eb3a4;
      padding-bottom: 15px;
}
.evencolor{
      border-bottom:1px solid #eb6438; 
}
.imgtxt_list .imgbox{
      width: 90px;
      height: 60px;
      display: inline-block;
      background-color: red;
      border-radius:5px;   
}
.imgtxt_list .txtbox{
      flex: 1;  
      padding-left: 16px;
      position: relative;
}
.txtbox .txt_title,.txtbox .txt_ct{
       font-size: 12px;
       font-weight: 600;
       display: inline-block;
       padding-right: 8px;
       border-right: 1px solid #000; 
}
.txtbox .txt_ct{
       font-weight: 100;
       padding-right: 0;
       border: 0;
       color: #656766;
       padding-left: 8px; 
} 
.txtbox image{
       position: absolute;
       width: 30px;
       display: inline-block;
       right: 0px;
       top: 8px;
}
.txttime,.times{
       font-weight: 100;
       font-size: 13px;
       display: block;
       color: #656766;
       padding-top: 8px;
       float: left;
}
.times{
       float: right;
       padding-right: 5px;
}
.link_img{
       width: 196px;
       display: block;
       margin: 0 auto;
       margin-top: 30px;
       /* position: absolute; */
       /* left: 50%; */
       /* bottom: 0; */
       /* transform: translateX(-50%); */
}
.prosl{
       width: 60px;
       position: fixed;
       right: 10px;
       bottom: 30px;
       /* transform: translateX(-50%);    */
}
.row{
      width: 100%;
}
.foot_zhanwei{
      width: 100%;
      height: 70px;
}
.active{
       visibility: visible !important;
}